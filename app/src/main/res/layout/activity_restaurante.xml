<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_restaurante"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dam.isi.frsf.utn.edu.ar.pedime.Restaurante.RestauranteActivity"
    android:background="#ddd">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout"
        android:background="@android:color/transparent"
        android:id="@+id/listview_platos"
        android:divider="@null" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="@string/llamar_mozo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_llamar_mozo"
            android:layout_weight="1.63"
            tools:text="@string/llamar_mozo"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff" />

        <Button
            android:text="@string/pedir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_pedir_comida"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_shopping_cart_white_24dp"
            android:drawablePadding="30dp"
            android:gravity="left|center_vertical|center_horizontal"
            android:paddingLeft="20dp" />
    </LinearLayout>
</RelativeLayout>
